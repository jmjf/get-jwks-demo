{
    "compilerOptions": {
      "target": "es2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "jsx": "preserve",
      "outDir": "lib-esm",
      // "declarationDir": "types",
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "declaration": true,

      "typeRoots": ["./node_modules/@types"],
      "types": ["node"],
    },
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true
    }
  }